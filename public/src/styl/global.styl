body
  font 13pt/15pt 'PT Serif'

.main_block
  width 1280px
  min-height 400px
  margin 0 auto
  // outline 1px solid #23a8ba

.header_block
  overflow hidden
  border-bottom 1px solid black

.head_title_block
  float left
  overflow hidden
  padding-left 10px
  font 16pt/18pt 'PT Serif'
  font-weight bold

a
  &.head_title
    margin-top 5px
    display block
    font 16pt/18pt 'PT Serif'
    font-weight bold
    text-decoration none
    color black

.head_s_title
  margin-top 15px

.chat_block
  width 810px
  float left
  margin-top 10px
  padding 5px
  overflow hidden
  outline 1px solid #7eba52
  margin-left 20px

.chat_item
  float left
  margin-right 20px

.ch_name
  float left
  margin-right 5px

.ch_post
  display inline-block

.ch_name_create
  margin-right 5px
  font-weight bold
  float left

.ch_post_create
  min-width 100px
  overflow hidden
  border 1px solid black
  float left
  outline none

.menu_block
  float right
  width 120px
  margin-top 5px
  margin-right 10px
  padding-bottom 5px
  a
    text-decoration none
    font 12pt/14pt 'PT Serif'
    float right
    color #9ca7a7
    &:hover
      text-decoration underline

.content_block
  padding 10px