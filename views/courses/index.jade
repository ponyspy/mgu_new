extends ../layout

block paths
	- var s_title = 'Courses'

block title
	title COURSES

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/courses.css' + version)

block content_scripts
	script(type='text/javascript', src='/build/libs/js/raphael-min.js' + version)
	script(type='text/javascript', src='/build/js/courses.js' + version)
	script(type='text/javascript', src='/build/js/circles.js' + version)


block content
	.courses
		each course in courses
			.courses_item
				a.course_title(href='/courses/' + course._id)= course.i18n.title.get('ru')
				.course_lessons
					.circles
						a.circle(href='/courses/' + course._id + '#1', l_title='Lesson 1', l_fail='50', l_success='50')
						a.circle(href='/courses/' + course._id + '#2', l_title='Lesson 2', l_fail='50', l_success='50')
						a.circle(href='/courses/' + course._id + '#3', l_title='Lesson 3', l_fail='50', l_success='50')
						a.circle(href='/courses/' + course._id + '#4', l_title='Lesson 4', l_fail='50', l_success='50')
						a.circle(href='/courses/' + course._id + '#5', l_title='Lesson 5', l_fail='50', l_success='50')
						//- each lesson,i in course.lessons
							.circle(l_title='Урок ' + (i + 1), l_fail='35', l_success='25')
