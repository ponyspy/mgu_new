extends ../../../index.jade

block vars
	- var task = 'Письмо'
	- var items = 3

block columns
	.exercise_column
		.exercise_blocks_block
			include ../../../types/drop.jade
			.exercise_block(class='drop_words')

				if select == 1
					.drop_items
						p Вставьте пропущенное местоимение.
						ol
							li!= item('{list:она|ты|он|я|мы|вы|они} познакомилась с Иваном в самолёте.')
							li!= item('{list:они|ты|он|она|мы|вы|я} ещё учатся сейчас в школе.')
							li!= item('{list:ты|я|он|она|мы|вы|они} учишься или уже работаешь?')
							li!= item('{list:вы|ты|он|она|мы|я|они} часто знакомитесь на улице?')
							li!= item('{list:я|ты|он|она|мы|вы|они} учусь в университете уже 3 года.')
							li!= item('{list:мы|ты|он|она|я|вы|они} часто проводим 2 недели на море летом.')
							li!= item('Как {list:они|ты|он|она|мы|вы|я} проводишь свободное время?')
							li!= item('{list:я|ты|он|она|мы|вы|они} очень хорошо провожу свободное время одна дома.')
							li!= item('Лена ездила в Петербург, {list:она|ты|он|я|мы|вы|они} провела там всю неделю.')
							li!= item('Марина хорошо знает Антона, {list:они|ты|он|она|мы|вы|я} познакомилась с ним 2 года назад.')
